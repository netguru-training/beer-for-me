!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Beer4Me"
      %meta{:content => content_for?(:description) ? yield(:description) : "Beer4Me", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{current_controller_name} #{action_name}"}
    .navbar.navbar-inverse.navbar-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .row
          .span12
            = render 'layouts/messages'
        .row
          .span12.content-container
            = yield
          %footer
